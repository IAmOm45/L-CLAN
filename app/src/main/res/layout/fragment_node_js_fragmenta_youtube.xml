<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    tools:context=".Domains.WebDevelopment.Backend.BackendFragment.ProgramminLangugesFragmentpart.NodejsFragment.NodeJsFragmentaYoutube">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="195dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/NodeJsYtResource1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="# Rank 1 (Code Step By Step)"
                            android:layout_marginTop="2dp"
                            android:background="#28b0ff"
                            android:textColor="@color/white"
                            style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                            android:textStyle="bold"
                            />

                        <ImageView
                            android:id="@+id/NodeJsYtResourceimage1"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/youtube12" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="195dp">

