<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:background="@color/chatbackground"
    android:orientation="horizontal"
    tools:context=".Domains.ArtificialIntellegenceDevelopment.Artificial_Intellengence_Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:scrollbarTrackVertical="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:id="@+id/tol1">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/AItext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Aiinfo_text"
                android:justificationMode="inter_word"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/RoadmapwebTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Here To Check Full Roadmap-> https://i.am.ai/"
                android:justificationMode="inter_word"
                android:textStyle="bold"
                android:autoLink="web" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbarThumbVertical="@android:color/transparent"
                android:scrollbarTrackVertical="@android:color/transparent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/AI_Roadmap_image"
                        android:layout_width="match_parent"
                        android:layout_height="400dp"
                        android:layout_marginTop="20dp"
                        android:scaleType="fitXY"
                        app:srcCompat="@drawable/ai_roadmap" />


                </LinearLayout>
            </ScrollView>

            <TextView
                android:id="@+id/AiStep1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Step_1for_Ai"
                android:justificationMode="inter_word"
                android:textStyle="bold"
                tools:ignore="DuplicateIds"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="195dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/AIStep1Image"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/ai_web" />

                        <TextView
                            android:id="@+id/AIStep1text"
                            style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:background="#28b0ff"
                            android:justificationMode="inter_word"
                            android:text="Learn Programming Languages"
                            android:textStyle="bold" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>



            <TextView
                android:id="@+id/AiStep2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Step_2for_Ai"
                android:justificationMode="inter_word"
                android:textStyle="bold"
                tools:ignore="DuplicateIds"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="195dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/Step2_ML_Image"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/ml_web" />

                        <TextView
                            android:id="@+id/Step2_ML_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Machine Learning"
                            android:layout_marginTop="2dp"
                            android:background="#28b0ff"
                            android:justificationMode="inter_word"
                            style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/AiStep3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Step_3_for_Ai"
                android:justificationMode="inter_word"
                android:textStyle="bold"
                tools:ignore="DuplicateIds"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="195dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/Step3_NN_Image"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/neural_network" />

                        <TextView
                            android:id="@+id/Step3_NN_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Neural Network"
                            android:layout_marginTop="2dp"
                            android:background="#28b0ff"
                            android:justificationMode="inter_word"
                            style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/AiStep4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Step_4_for_Ai"
                android:justificationMode="inter_word"
                android:textStyle="bold"
                tools:ignore="DuplicateIds"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="195dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/Step4_NLP_Image"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/nlp_web" />

                        <TextView
                            android:id="@+id/Step4_NLP_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Natural Language Proceesing"
                            android:layout_marginTop="2dp"
                            android:background="#28b0ff"
                            android:justificationMode="inter_word"
                            style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/AiStep5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Step_5_for_Ai"
                android:justificationMode="inter_word"
                android:textStyle="bold"
                tools:ignore="DuplicateIds"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="195dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/Step5_DL_Image"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/deeplearning" />

                        <TextView
                            android:id="@+id/Step5_DL_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Deep Learning"
                            android:layout_marginTop="2dp"
                            android:background="#28b0ff"
                            android:justificationMode="inter_word"
                            style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <TextView
                android:id="@+id/AiStep6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/Step_6_for_Ai"
                android:justificationMode="inter_word"
                android:textStyle="bold"
                tools:ignore="DuplicateIds"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="195dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    app:cardCornerRadius="5dp"
                    app:cardElevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/Step6_RL_Image"
                            android:layout_width="wrap_content"
                            android:layout_height="160dp"
                            android:scaleType="fitXY"
                            app:srcCompat="@drawable/reinforcement_learning" />

                        <TextView
                            android:id="@+id/Step6_RL_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Reinforcement Learning"
                            android:layout_marginTop="2dp"
                            android:background="#28b0ff"
                            android:justificationMode="inter_word"
                            style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                            android:textStyle="bold"
                            />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>