<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Domains.WebDevelopment.WebActivity"
    android:layout_height="match_parent"
    android:background="@color/chatbackground"
    android:orientation="horizontal">

<!--    <androidx.appcompat.widget.Toolbar-->
<!--        android:id="@+id/webdevelopmenttoolbar"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="?attr/actionBarSize"-->
<!--        android:background="?attr/colorPrimary"-->
<!--        android:elevation="4dp"-->
<!--        android:theme="@style/ThemeOverlay.AppCompat.ActionBar" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:scrollbarTrackVertical="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:padding="7dp"
        android:id="@+id/tol1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/large_text"
            android:justificationMode="inter_word"
            android:textStyle="bold"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbarThumbVertical="@android:color/transparent"
            android:scrollbarTrackVertical="@android:color/transparent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/roadmap" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="195dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/FrontendImage"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/frontend" />

                    <TextView
                        android:id="@+id/Frontendtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="FRONTED DEVELOPMENT"
                        android:layout_marginTop="2dp"
                        android:background="#28b0ff"
                        android:textColor="@color/white"
                        style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="195dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/BackendImage"
                        android:layout_width="wrap_content"
                        android:layout_height="160dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/backend" />

                    <TextView
                        android:id="@+id/Backendtext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BACKEND DEVELOPMENT"
                        android:layout_marginTop="2dp"
                        android:background="#28b0ff"
                        android:textColor="@color/white"
                        style="@style/MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked"
                        android:textStyle="bold"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>