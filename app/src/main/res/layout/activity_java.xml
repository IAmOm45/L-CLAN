<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Domains.AndroidDevelopment.Java.JavaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbarThumbVertical="@android:color/transparent"
        android:scrollbarTrackVertical="@android:color/transparent"
        android:layout_marginTop="10dp"
        android:padding="7dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

        <TextView
            android:id="@+id/JavaTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            android:text="@string/java_title_"
            android:textStyle="bold"
            android:padding="20px"
            android:textSize="18dp"
            android:layout_marginBottom="20px"/>

            <TextView
                android:id="@+id/javainformation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/java_information"
                android:textStyle="bold"
                android:layout_marginBottom="20px"/>

<!--    <LinearLayout-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:orientation="vertical" >-->

            <TextView
                android:id="@+id/javaytresources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/javaytresources1"
                android:textStyle="bold"
               />

            <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/JavaResourceRV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="horizontal"
        android:scaleType="fitXY"
        tools:listitem="@layout/javaandroidsinglerv" />

            <TextView
                android:id="@+id/javawebresources"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:justificationMode="inter_word"
                android:text="@string/javawebresources1"
                android:textStyle="bold"
                />

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/androidjavawebresources"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="horizontal"
                android:scaleType="fitXY"
                tools:listitem="@layout/javaandroidsinglerv" />

<!--        </LinearLayout>-->
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>